<div>
  <div>
    <h1>
      List of all projects
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new project
    </h2>

    <form action="/insert_project" method="post">
      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title">
      </div>

      <div>
        <label for="completed_photo_box">
          Completed photo
        </label>

        <input type="text" id="completed_photo_box" name="query_completed_photo">
      </div>

      <div>
        <label for="desription_box">
          Desription
        </label>

        <textarea id="desription_box" name="query_desription" rows="3"></textarea>
      </div>

      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status">
      </div>

      <div>
        <label for="start_date_box">
          Start date
        </label>

        <input type="date" id="start_date_box" name="query_start_date">
      </div>

      <div>
        <label for="finish_date_box">
          Finish date
        </label>

        <input type="date" id="finish_date_box" name="query_finish_date">
      </div>

      <div>
        <label for="other_notes_box">
          Other notes
        </label>

        <textarea id="other_notes_box" name="query_other_notes" rows="3"></textarea>
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="inspiration_id_box">
          Inspiration
        </label>

        <input type="text" id="inspiration_id_box" name="query_inspiration_id">
      </div>

      <div>
        <label for="artworks_count_box">
          Artworks count
        </label>

        <input type="text" id="artworks_count_box" name="query_artworks_count">
      </div>

      <div>
        <label for="updates_count_box">
          Updates count
        </label>

        <input type="text" id="updates_count_box" name="query_updates_count">
      </div>

      <button>
        Create project
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Completed photo
        </th>

        <th>
          Desription
        </th>

        <th>
          Status
        </th>

        <th>
          Start date
        </th>

        <th>
          Finish date
        </th>

        <th>
          Other notes
        </th>

        <th>
          User
        </th>

        <th>
          Inspiration
        </th>

        <th>
          Artworks count
        </th>

        <th>
          Updates count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_projects.each do |a_project| %>
      <tr>
        <td>
          <%= a_project.id %>
        </td>

        <td>
          <%= a_project.title %>
        </td>

        <td>
          <%= a_project.completed_photo %>
        </td>

        <td>
          <%= a_project.desription %>
        </td>

        <td>
          <%= a_project.status %>
        </td>

        <td>
          <%= a_project.start_date %>
        </td>

        <td>
          <%= a_project.finish_date %>
        </td>

        <td>
          <%= a_project.other_notes %>
        </td>

        <td>
          <%= a_project.user_id %>
        </td>

        <td>
          <%= a_project.inspiration_id %>
        </td>

        <td>
          <%= a_project.artworks_count %>
        </td>

        <td>
          <%= a_project.updates_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_project.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_project.updated_at) %> ago
        </td>

        <td>
          <a href="/projects/<%= a_project.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
