<div>
  <div>
    <h1>
      List of all follows
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new follow
    </h2>

    <form action="/insert_follow" method="post">
      <div>
        <label for="recipient_id_box">
          Recipient
        </label>

        <input type="text" id="recipient_id_box" name="query_recipient_id">
      </div>

      <div>
        <label for="sender_id_box">
          Sender
        </label>

        <input type="text" id="sender_id_box" name="query_sender_id">
      </div>

      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status">
      </div>

      <button>
        Create follow
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Recipient
        </th>

        <th>
          Sender
        </th>

        <th>
          Status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_follows.each do |a_follow| %>
      <tr>
        <td>
          <%= a_follow.id %>
        </td>

        <td>
          <%= a_follow.recipient_id %>
        </td>

        <td>
          <%= a_follow.sender_id %>
        </td>

        <td>
          <%= a_follow.status %>
        </td>

        <td>
          <%= time_ago_in_words(a_follow.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_follow.updated_at) %> ago
        </td>

        <td>
          <a href="/follows/<%= a_follow.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
