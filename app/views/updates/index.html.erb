<div>
  <div>
    <h1>
      List of all updates
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new update
    </h2>

    <form action="/insert_update" method="post">
      <div>
        <label for="photo_box">
          Photo
        </label>

        <input type="text" id="photo_box" name="query_photo">
      </div>

      <div>
        <label for="body_box">
          Body
        </label>

        <textarea id="body_box" name="query_body" rows="3"></textarea>
      </div>

      <div>
        <label for="project_id_box">
          Project
        </label>

        <input type="text" id="project_id_box" name="query_project_id">
      </div>

      <button>
        Create update
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Photo
        </th>

        <th>
          Body
        </th>

        <th>
          Project
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_updates.each do |an_update| %>
      <tr>
        <td>
          <%= an_update.id %>
        </td>

        <td>
          <%= an_update.photo %>
        </td>

        <td>
          <%= an_update.body %>
        </td>

        <td>
          <%= an_update.project_id %>
        </td>

        <td>
          <%= time_ago_in_words(an_update.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_update.updated_at) %> ago
        </td>

        <td>
          <a href="/updates/<%= an_update.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
